<div class="row">
    <div class="col-sm-8">
        <h1> All Purchases </h1>
        <% for purchases in @purchases %>
            <h4 class= "mt-5"> <a href = "/purchase/<%= purchases[:id]%>"> <%=purchases[:title]%> </a> </h4>
        <% end %>
    </div>
    <div class="col-sm-4 mt-5">
        <h2> Submit your group buying opportunity! </h2>
        <form>
            <div class="form-group">
                <label>What is the item you are group buying</label>
                <textarea class="form-control" rows="1" name="title"></textarea>
            </div>
            <div class="form-group">
                <label>How much will it cost</label>
                <textarea class="form-control" rows="1" name="cost"></textarea>
            </div>
            <div class="form-group">
                <label>What date will you put through the order (i.e. the last day to sign up)</label>
                <textarea class="form-control" rows="1" name="purchase_date"></textarea>
            </div>
            <div class="form-group">
                <label>Where is the pickup location?</label>
                <textarea class="form-control" rows="1" name="purchase_location"></textarea>
            </div>
            <div class="form-group">
                <label>Leave a comment to get people exited!</label>
                <textarea class="form-control" rows="3" name="comment"></textarea>
            </div>
        </form>
    </div>
</div>

