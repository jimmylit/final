<div class = "row">
    <div class = "col-sm-9">
     <i class="fas fa-trailer fa-3x"></i>
        <h1 class = "mt-3"> Join the <%= @purchase[:title] %> bandwagon</h1>
        <h3 class = "mt-4"><%= @purchase[:cost] %> </h3>
    </div>
</div>


<form>
  <div class="form-group mt-3">
    <label> How many items are you on the bandwagon for?</label>
    <select class="form-control" name="number_of_items">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <div class="form-group">
    <label> Leave a comment! </label>
    <textarea class="form-control" rows="3" name="comment"></textarea>
  </div>
  <a class="btn btn-primary submit" href="/purchase/<%=@purchase[:id]%>/bandwagon/thanks"> Submit</a>
</form>